# ManoMitra Configuration
# Copy this file to .env and update the values

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=True

# Model Paths
STT_MODEL_PATH=./data/models/whisper-base
EMOTION_MODEL_PATH=./data/models/emotion_classifier
TTS_MODEL_PATH=./data/models/tts_model
NLP_MODEL_PATH=./data/models/nlp_model

# Language Settings
SUPPORTED_LANGUAGES=en,te
DEFAULT_LANGUAGE=en

# Audio Settings
SAMPLE_RATE=16000
CHUNK_SIZE=1024
MAX_AUDIO_LENGTH=30

# Model Configuration
WHISPER_MODEL_SIZE=base
EMOTION_THRESHOLD=0.6
RESPONSE_MAX_LENGTH=200

# Performance Settings
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=30

# Security
SECRET_KEY=your-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database
DATABASE_URL=sqlite:///./data/conversations.db

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/manomitra.log